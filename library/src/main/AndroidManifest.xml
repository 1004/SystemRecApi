<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.nick.library">

    <uses-permission android:name="android.permission.CAPTURE_AUDIO_OUTPUT" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.RecBridgeActivity"
            android:label="@string/rec_bridge_resolve"
            android:theme="@style/AppThemeDialog" />

        <service
            android:name="dev.nick.library.RecBridgeService"
            android:exported="true">
            <intent-filter>
                <action android:name="dev.nick.app.action.BINDE_REC_BRIDGE_SERVICE" />
            </intent-filter>
        </service>

    </application>

</manifest>
